{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["node", "jest"],
		"typeRoots": ["./src/types", "./node_modules/@types"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
